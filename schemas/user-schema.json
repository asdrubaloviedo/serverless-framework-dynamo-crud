{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "User",
  "type": "object",
  "required": ["name", "email"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The person's first name."
    },
    "email": {
      "type": "string",
      "description": "The person's Email."
    },
    "edad": {
      "type": "integer",
      "description": "Age in years",
      "minimum": 18
    }
  }
}
